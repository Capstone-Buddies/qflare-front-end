<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/question_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

    <!-- Question Text -->
    <TextView
        android:id="@+id/number_question"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="1"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/worksans_medium"
        android:textSize="16dp"
        android:layout_toStartOf="@+id/questionText">
    </TextView>

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/number_question"
        android:justificationMode="inter_word"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit ut aliquam, purus sit amet luctus venenatis, lectus magna fringilla urna, porttitor rhoncus dolor purus non enim praesent elementum facilisis leo, vel fringilla est ullamcorper eget nulla facilisi etiam dignissim diam quis enim lobortis scelerisque fermentum dui faucibus in ornare quam viverra orci sagittis eu volutpat odio facilisis mauris sit amet."
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
</LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">
        <!-- Answer Button A -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answerButtonA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/questionText"
            android:background="@drawable/answer_button"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing"
            android:textAllCaps="false"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">
        <!-- Answer Button B -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answerButtonB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/answerButtonA"
            android:background="@drawable/answer_button"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing"
            android:textAllCaps="false"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">
    <!-- Answer Button C -->
        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/answerButtonC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/answerButtonB"
        android:background="@drawable/answer_button"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing"
            android:textAllCaps="false"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">
    <!-- Answer Button D -->
        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/answerButtonD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/answerButtonC"
        android:background="@drawable/answer_button"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing"
            android:textAllCaps="false"/>
</androidx.cardview.widget.CardView>

</LinearLayout>