<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/toplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bgimage"
            android:layout_width="412dp"
            android:layout_height="282dp"
            android:src="@drawable/bg_blue" />
    </FrameLayout>
    <TextView
        android:id="@+id/title_congratulation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Congratulations !"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/expText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_congratulation"
        android:layout_centerHorizontal="true"
        android:text="+800 EXP"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="18sp"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/medalImage"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@id/expText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/iv_medal" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/medalImage"
        android:layout_centerHorizontal="true"
        android:text="Skor Anda"
        android:textColor="@color/Primary_color"
        android:fontFamily="@font/worksans_bold"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/scoreDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreText"
        android:layout_centerHorizontal="true"
        android:text="Selamat Anda sudah menyelesaikan quiz"
        android:textColor="@color/Primary_color"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scoreDescription"
        android:src="@drawable/circle_score"/>

    <TextView
        android:id="@+id/scoreNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreDescription"
        android:layout_centerHorizontal="true"
        android:text="98"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/worksans_semibold"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/playAgainButton"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/scoreNumber"
        android:background="@drawable/square_frame_yellow"
        android:text="Mainkan Lagi"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backToMenuButton"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:layout_below="@id/playAgainButton"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:text="Kembali ke Menu"
        android:textAllCaps="false"
        android:background="@drawable/square_blue_back"
        android:textColor="@android:color/white" />
</RelativeLayout>
