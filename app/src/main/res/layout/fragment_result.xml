<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    <LinearLayout-->
<!--        android:id="@+id/toplayer"-->
<!--        android:layout_width="430dp"-->
<!--        android:layout_height="300dp"-->
<!--        android:orientation="vertical">-->
        <ImageView
            android:id="@+id/bgimage"
            android:layout_width="430dp"
            android:layout_height="282dp"
            android:src="@drawable/bg_blue" />
<!--    </LinearLayout>-->
    <TextView
        android:id="@+id/title_congratulation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Congratulations !"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/expText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_congratulation"
        android:layout_centerHorizontal="true"
        android:text="+800 EXP"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="18sp"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/medalImage"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@id/expText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/iv_medal" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/medalImage"
        android:layout_centerHorizontal="true"
        android:text="Skor Anda"
        android:textColor="@color/Primary_color"
        android:fontFamily="@font/worksans_bold"
        android:textSize="30sp"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/scoreDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreText"
        android:layout_centerHorizontal="true"
        android:text="Selamat Anda sudah menyelesaikan quiz"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/scoreNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreDescription"
        android:layout_centerHorizontal="true"
        android:text="98"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:layout_below="@id/scoreNumber"
        android:backgroundTint="@color/yellow"
        android:text="Mainkan Lagi"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/backToMenuButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/playAgainButton"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Kembali ke Menu"
        android:backgroundTint="@color/Primary_color"
        android:textColor="@android:color/white" />
</RelativeLayout>
