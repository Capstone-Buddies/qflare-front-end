<?xml version="1.0" encoding="utf-8"?>
    <!-- Other Rankings -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:orientation="vertical"
        android:background="@drawable/square_frame_white">

        <!-- Repeat for each additional ranking -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageLeader"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="50dp"
                android:src="@drawable/iv_profile" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/nameLeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Madelyn Dias"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lvlExpLeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="1,053 EXP"
                    android:textSize="14sp"
                    android:textColor="@color/gray"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Add more entries as needed -->

    </LinearLayout>
