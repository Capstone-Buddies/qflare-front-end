<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ProfileActivity">

    <!-- Menu Profil -->
    <TextView
        android:id="@+id/menu_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Menu Profil"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/menu_profil"
        android:layout_centerHorizontal="true"
        android:src="@drawable/iv_profile"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/profile_picture" />

    <!-- Camera Icon -->
    <ImageView
        android:id="@+id/camera_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@id/profile_picture"
        android:layout_alignEnd="@id/profile_picture"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/iv_camera"
        android:contentDescription="@string/camera_icon" />

    <!-- Name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Siti Halimah"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- Email -->
    <LinearLayout
        android:id="@+id/frame_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@drawable/square_button_background"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/iv_email"
            android:contentDescription="@string/email_icon" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="sitihalimah@gmail.com"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- User Information Label -->

    <!-- Level and EXP -->

    <!-- Quiz Invitation -->

    <!-- Logout Button -->

    <TextView
        android:id="@+id/user_info_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame_email"
        android:layout_marginTop="40dp"
        android:text="Informasi Pengguna"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_info_label"
        android:background="@drawable/exp_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/level_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/level_label"
            android:text="9"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/level_label"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="30" />

        <TextView
            android:id="@+id/exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_bar"
            android:layout_marginTop="8dp"
            android:text="300/1000 Exp saat ini"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/quiz_invitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/exp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="467dp"
        android:text="Ayo Kerjakan Quiz lagi agar dapat lebih banyak exp!"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="14sp" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/quiz_invitation"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Keluar"
        android:textColor="@android:color/white" />

</RelativeLayout>
