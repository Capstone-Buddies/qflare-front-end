<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="24/01/2023"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>
    <!-- Literacy Test -->
    <androidx.cardview.widget.CardView
        android:layout_width="345dp"
        android:layout_height="120dp"
        android:layout_below="@id/tvTimestamp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:layout_width="345dp"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corner_background_skor"
            app:cardCornerRadius="15dp"/>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="110dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/iv_quiz"/>

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 1"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvQuizCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz Skolastik"
                android:textColor="@color/yellow"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_medium"
                android:text="Skor 98"
                android:layout_marginStart="109dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/yellow"
                android:textSize="13sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btHistory"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="-30dp"
                android:backgroundTint="@color/yellow"
                android:text="Lihat Hasil"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>